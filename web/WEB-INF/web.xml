<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/JSP-file/newjsp.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>Log.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>Servlet1</servlet-class>
        <init-param>
            <param-name>activeTab</param-name>
            <param-value>2</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>Cart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tmp</servlet-name>
        <servlet-class>products.Tmp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrdersHistoryUpdate</servlet-name>
        <servlet-class>products.OrdersHistoryUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentsUpdate</servlet-name>
        <servlet-class>comments.CommentsUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/Servlet1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>newjsp</servlet-name>
        <jsp-file>/JSP-file/newjsp.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>chooseMarket</servlet-name>
        <jsp-file>/JSP-file/chooseMarket.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>chooseMarket</servlet-name>
        <url-pattern>/markets</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userPage</servlet-name>
        <jsp-file>/JSP-file/userPage.jsp</jsp-file>
        <init-param>
            <param-name>activeTab</param-name>
            <param-value>2</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>newjsp</servlet-name>
        <url-pattern>/productList</url-pattern>
        <url-pattern>/enterToProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/Cart</url-pattern>
        <url-pattern>/enterToCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/JSP-file/auth.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginError</servlet-name>
        <jsp-file>/JSP-file/auth-error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginError</servlet-name>
        <url-pattern>/login-error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/AuthServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userPage</servlet-name>
        <url-pattern>/userPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tmp</servlet-name>
        <url-pattern>/Tmp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrdersHistoryUpdate</servlet-name>
        <url-pattern>/buy</url-pattern>
        <url-pattern>/userPageWithHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentsUpdate</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/enterToProducts</url-pattern>
            <url-pattern>/enterToCart</url-pattern>
            <url-pattern>/buy</url-pattern>
            <url-pattern>/markets</url-pattern>
            <url-pattern>/userPageWithHistory</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>tomcat</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/JSP-file/auth.jsp</form-login-page>
            <form-error-page>/JSP-file/auth-error.jsp</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
